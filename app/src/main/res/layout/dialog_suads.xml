<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/capnhatsv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:text="Cập Nhật Sinh Viên"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:background="@drawable/input"
        android:id="@+id/edtnhapten"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:hint="Nhập Tên Lớp:"
        android:textStyle="bold" />


    <EditText
        android:background="@drawable/input"
        android:id="@+id/edtnhapmalop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:hint="Nhập Mã Lớp:"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:drawableLeft="@drawable/verify"
            android:background="@drawable/khung1"
            android:id="@+id/btnxacnhan"
            android:layout_width="150dp"
            android:layout_height="wrap_content"

            android:text="Xác Nhận"
            android:textStyle="bold" />

        <Button
            android:drawableLeft="@drawable/delete"
            android:background="@drawable/khung1"
            android:id="@+id/btnhuy"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Hủy"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>