<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Quản Lý Sinh Viên"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button

            android:id="@+id/btnthem"
            android:layout_width="400dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/khungmenu"
            android:drawableLeft="@drawable/plus"
            android:text="Thêm lớp"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnxem"
            android:layout_width="400dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:background="@drawable/khungmenu"
            android:drawableLeft="@drawable/view"
            android:text="Xem Danh Sách"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnqualy"
            android:layout_width="400dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:textSize="15dp"
            android:background="@drawable/khungmenu"
            android:drawableLeft="@drawable/manage"
            android:text="Quản Lý Sinh Viên" />

        <Button
            android:id="@+id/btnxemquanlysv"
            android:layout_width="400dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:textSize="15dp"
            android:background="@drawable/khungmenu"
            android:drawableLeft="@drawable/view"
            android:text="Danh Sách Quản Lý" />


    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF"
        app:headerLayout="@layout/headermenu"
        app:itemIconTint="@color/colorPrimaryDark"
        app:itemTextColor="@color/colorPrimaryDark"
        app:menu="@menu/drawer">

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>